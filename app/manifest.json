{
  "name": "YouTube Anti Translate",
  "version": "1.16.1",
  "description": "A small extension to disable YT video titles autotranslation.",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/start.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["src/background.js", "src/background_audio.js", "src/description.js"],
    "matches": ["*://*.youtube.com/*"]
  }],
  "action": {
    "default_popup": "pages/popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "icons": {
    "48": "icon48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{1869cf16-2ba5-c82e-ef9b-1508a93857c6}" 
    }
  }
}
